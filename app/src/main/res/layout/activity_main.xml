<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/loading_dialog"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="onViewClick"
            android:text="loading dialog" />

        <Button
            android:id="@+id/msg_dialog"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="onViewClick"
            android:text="msg dialog" />

        <Button
            android:id="@+id/tips_dialog"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="onViewClick"
            android:text="tips dialog" />

        <Button
            android:id="@+id/edit_dialog"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="onViewClick"
            android:text="edit dialog" />

        <Button
            android:id="@+id/password_dialog"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="onViewClick"
            android:text="password dialog" />

        <Button
            android:id="@+id/bottom_dialog"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="onViewClick"
            android:text="bottom dialog" />

        <Button
            android:id="@+id/popup_dialog"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="onViewClick"
            android:text="popup dialog" />

        <Button
            android:id="@+id/date_dialog1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="onViewClick"
            android:text="date dialog(yyyy-MM-dd HH:mm:ss)" />

        <Button
            android:id="@+id/date_dialog2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="onViewClick"
            android:text="date dialog(yyyy-MM-dd HH:mm)" />

        <Button
            android:id="@+id/date_dialog3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="onViewClick"
            android:text="date dialog(yyyy-MM-dd)" />

        <Button
            android:id="@+id/date_dialog4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="onViewClick"
            android:text="date dialog(HH:mm:ss)" />

        <Button
            android:id="@+id/date_dialog5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="onViewClick"
            android:text="date dialog(HH:mm)" />

        <Button
            android:id="@+id/single_picker_dialog"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="onViewClick"
            android:text="single picker dialog" />


    </LinearLayout>
</ScrollView>
